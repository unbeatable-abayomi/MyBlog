@model IEnumerable<MyBlog.Models.Post>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Admin Panel</h1>

<p>
    <a  asp-controller="Panel" asp-action="Edit">Add A New Post</a>
</p>

@foreach (var item in Model)
{
<ul>
    <li>
        @item.Title
    </li>
    <li>
        <a asp-controller="Panel" asp-action="Edit" asp-route-Id="@item.Id">Edit</a>
    </li>
    <li>
        <a asp-controller="Panel" asp-action="Remove" asp-route-Id="@item.Id">Remove</a>
    </li>
</ul>

}